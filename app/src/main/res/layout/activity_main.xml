<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#d8ecf9">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:elegantTextHeight="false"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textColor="#000"
        android:allowUndo="false"
        android:background="#ffa500"
        android:onClick="DisplayToastSpt"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SCORES APP"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="#ffa500"
        android:onClick="DisplayToastScr"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="#ffa500"
        android:onClick="DisplayToastLib"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="#ffa500"
        android:onClick="DisplayToastBgr"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="#ffa500"
        android:onClick="DisplayToastRdr"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="#FF486A"
        android:layout_margin="10dp"
        android:onClick="DisplayToastApp"
        android:clickable="true" />

</RelativeLayout>
